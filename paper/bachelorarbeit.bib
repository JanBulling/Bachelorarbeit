  publisher      = {IOP Publishing},
  qualityassured = {qualityAssured},
}

@Article{Ford_1998,
  author         = {Ford, L. H.},
  journal        = {Phys. Rev. A},
  title          = {Casimir {F}orce between a {D}ielectric {S}phere and a {W}all: {A} {M}odel for {A}mplification of {V}acuum {F}luctuations},
  year           = {1998},
  issn           = {1094-1622},
