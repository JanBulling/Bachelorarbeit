  date           = {1998-04-22},
  doi            = {10.1103/physreva.58.4279},
  eprint         = {quant-ph/9804055},
  file           = {:Ford_1998 - Casimir Force between a Dielectric Sphere and a Wall_ a Model for Amplification of Vacuum Fluctuations.pdf:PDF:http\://arxiv.org/pdf/quant-ph/9804055v2},
  groups         = {Casimir Effect},
  keywords       = {Quantum Physics (quant-ph), Condensed Matter (cond-mat), High Energy Physics - Theory (hep-th), FOS: Physical sciences},
  publisher      = {American Physical Society (APS)},
  qualityassured = {qualityAssured},
}

@Article{Kamp_2020,
  author        = {van de Kamp, Thomas W. and Marshman, Ryan J. and Bose, Sougato and Mazumdar, Anupam},
  journal       = {Phys. Rev. A},
  title         = {Quantum {G}ravity {W}itness via {E}ntanglement of {M}asses: {C}asimir {S}creening},
  year          = {2020},
  issn          = {2469-9934},
